<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- CSS -->
    <link rel="stylesheet" href="/css/uploadPhoto.css" />
    <title>Upload Cover Photo</title>
  </head>
  <body>
    <!-- nav -->
    <%-include("../partials/navbar.ejs") %>
    
    <div class="form-container">
      <!-- icon -->
      <h1>Upload Cover photo</h1>
      <p>
        <!-- upload icon -->
      </p>

      <% if(error) { %>
        <small class="error">
          <i class="fa fa-exclamation-circle"></i>
          <%=error %>
        </small>
      <% } %>

      <form action="/api/v1/users/cover-photo-upload?_method=PUT" method="POST" enctype="multipart/form-data">
        <label for="email">Select Imgae</label>
        <input type="file" name="cover" />
        <button type="submit">
          <i class="fa fa-upload"></i>
        </button>
      </form>
    </div>
    
    <!-- footer -->
    <%-include("../partials/footer.ejs") %>

  </body>
</html>
